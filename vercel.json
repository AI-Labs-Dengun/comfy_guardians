{
  "functions": {
    "src/app/api/autorizar/route.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/autorizar/:childId",
      "destination": "/autorizar/:childId"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 